@model mvcweb.Models.ViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPage.cshtml";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@foreach (var u in Model.Categorys)
{
    <h4>   @Html.DisplayFor(model => u.CateName)</h4>
}

<hr />
<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-3">
            <a href='@Url.Action("Details", "Products", new { Id = item.ProductId })'>
                <img src="@Url.Content(item.ImageLink)" style="margin:10px" height="160" width="140" />
            </a>

            <div class="list-group-item-heading">
                @Html.ActionLink(item.ProName.ToString(), "Details", "Products", new { id = item.ProductId }, null)
            </div>
            <div class="list-group-item-info">
                @Html.DisplayFor(modelItem => item.Price)
            </div>



        </div>


    }
</div>
<p>

    @Html.ActionLink("Back to List", "Index")
</p>
