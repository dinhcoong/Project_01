<div class="trends_slider_container">
    <!-- Trends Slider -->
    <div class="owl-carousel owl-theme trends_slider owl-loaded owl-drag">
        <!-- Trends Slider Item -->
        <!-- Trends Slider Item -->
        <!-- Trends Slider Item -->
        <!-- Trends Slider Item -->
        <!-- Trends Slider Item -->
