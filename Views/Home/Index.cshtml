        <div class="owl-stage-outer">
            <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 1755px;">

                @foreach (var item in Model)
                {
                    <div class="owl-item active" style="width: 262.5px; margin-right: 30px;">
                        <div class="owl-item">
                            <div class="trends_item is_new">
                                <div class="trends_image d-flex flex-column align-items-center justify-content-center">
                                    <a href="@Url.RouteUrl("ProDetail", new { ProName = FriendlyUrl.Url(item.ProName), id = item.ProductId })">

                                        <img src="@Url.Content(item.ImageLink)" style="margin:10px" height="160" width="140" />
                                    </a>
                                </div>
                                <div class="trends_content">
                                    <div class="trends_category"><a href="#">Smartphones</a></div>
                                    <div class="trends_info clearfix">
                                        <div class="trends_name">  <a href="@Url.RouteUrl("ProDetail", new { ProName = FriendlyUrl.Url(item.ProName), id = item.ProductId })"> @item.ProName.ToString()</a></div>
                                        <div class="trends_price">@Html.DisplayFor(modelItem => item.Price)</div>
                                    </div>
                                </div>
                                <ul class="trends_marks">
                                    <li class="trends_mark trends_discount">-25%</li>
                                    <li class="trends_mark trends_new">new</li>
                                </ul>
                                <div class="trends_fav"><i class="fas fa-heart"></i></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div><div class="owl-nav disabled"><div class="owl-prev">prev</div><div class="owl-next">next</div></div><div class="owl-dots disabled"></div>
    </div>
</div>